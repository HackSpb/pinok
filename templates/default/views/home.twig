{% extends "layout.twig" %}
{% block content %}
			<div class="row">
				{% include 'parts/home/home_code.twig' %}
			</div>
			<div class="row">
				<div class="hidden-xs hidden-sm col-md-9">
				{% include 'parts/home/home_slider.twig' %}
				</div>
				<div class="col-xs-12 col-sm-12 col-md-3">
					<center>
				{% if session_user == TRUE %}
					    <div class="thumbnail">
					      <a href="/id{{session_user.u_id}}"><img src="{{asset('templates/default/img/standart.jpg')}}"class="img-thumbnail"></a>
					      <div class="caption">
					        <p>Email: {{session_user.u_email}}</p>
					        <p>Имя: {{session_user.u_name}}</p>
					        <p><a href="/id{{session_user.u_id}}"><button class="btn btn-success">Личный кабинет</button></a>
					{% if session_user.u_role == 2 %}
					<a href="/admin"><button class="btn btn-primary">Панель редактора</button></a>
					{%endif%}
					{% if session_user.u_role == 3 %}
					<a href="/admin"><button class="btn btn-primary">Панель пинателя</button></a>
					{%endif%}
					{% if session_user.u_role == 4 %}
					<a href="/admin"><button class="btn btn-primary">Панель администратора</button></a>
					{%endif%}
					</p>
					      </div>
					    </div>
				{% else %}
				{% include 'parts/home/home_forma.twig' %}
				{% include 'parts/home/home_info_min.twig' %}
				{% endif %}
				</center>
				</div>
			</div>
			<div class="row" align="center">
				{% include 'parts/home/home_info_block_1.twig' %}
			</div>
            <div class="row" align="center">
				{% include 'parts/home/home_info_block_2.twig' %}
			</div>
		
		{% include 'parts/home/home_footer.twig' %}
		{% include 'parts/home/home_java_slider.twig' %}
{% endblock %}
