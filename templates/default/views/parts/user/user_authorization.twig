				function create_task(){
					var task_for = $('input:radio[name=task_for]:checked').val();
					var email_friend = $('#email_friend').val();
					var task_name = $('#task_name').val();
					var task_deadline_turn = $('input:radio[name=deadline_turn]:checked').val();		
					var task_deadline_year = $('#task_deadline_year').val();
					var task_deadline_month = $('#task_deadline_month').val();
					var task_deadline_day = $('#task_deadline_day').val();
					var task_deadline_hour = $('#task_deadline_hour').val();
					var task_type = $('#task_type').val();

					//alert(task_for+email_friend+task_name+task_deadline_turn+task_deadline_year+task_deadline_month+task_deadline_day+task_deadline_hour+task_type);

					var query = "task_for="+task_for+"&email_friend="+email_friend+"&task_name="+task_name+"&task_deadline_turn="+task_deadline_turn+"&task_deadline_year="+task_deadline_year+"&task_deadline_month="+task_deadline_month+"&task_deadline_day="+task_deadline_day+"&task_deadline_hour="+task_deadline_hour+"&task_type="+task_type;	
					$.ajax({
						type: "POST",
						url: "/task/do/create",
						data: query,
						success: function(answer) {
							$("#answer").html(answer);
							download_list();
						}
					});	
					return false;	
				}

				$(document).ready(function(){
				    download_list();
				});

				function download_list(){
					$.getJSON("/task/select/list",
				        function(data){
				        console.log(data);
				        var i; 
				       
				        var s = $('#temp_task').html();// берем образцовый хтмл из скрытого шаблона 
				        if (data.projects != 1) {
							for (i=0;i<20;i++){
								directives = {
									link: {
									    href: function(params) {
									    	return "?task_n=" + data.projects['number_'+i].t_id;
										}
									}
								};
								$('#project').append("<div id='id_p_"+i+"'>"+ s + "</div>"); // плодим дивы по нашему шаблону с уникальными ид
					
								$('#id_p_'+i).render(data.projects['number_'+i], directives); //рендерим свежевставленные дивы с шаблонами
							}	
						}
						if (data.tasks != 1) {
							for (i=0;i<20;i++){
								directives = {
									link: {
									    href: function(params) {
									    	return "?task_n=" + data.tasks['number_'+i].t_id;
									    }
									}
								};
							
								$('#task').append("<div id='id_t_"+i+"'>"+ s + "</div>"); // плодим дивы по нашему шаблону с уникальными ид
					
								$('#id_t_'+i).render(data.tasks['number_'+i], directives); //рендерим свежевставленные дивы с шаблонами
							}
						}
						if (data.notes != 1) {
							for (i=0;i<20;i++){
								directives = {
									link: {
									    href: function(params) {
									    	return "?task_n=" + data.notes['number_'+i].t_id;
									    }
									}
								};
					
								$('#notes').append("<div id='id_n_"+i+"'>"+ s + "</div>"); // плодим дивы по нашему шаблону с уникальными ид
					
								$('#id_n_'+i).render(data.notes['number_'+i], directives); //рендерим свежевставленные дивы с шаблонами
							}	
						}
				    });
				}

