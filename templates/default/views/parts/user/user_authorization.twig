				task_for_2.onfocus = function() {
	  				if (this.value == 2) { 
	  					this.className = "email";
	  					email.innerHTML = '<div class="form-group"><label for="email_friend" class="col-sm-3 control-label">Email</label><div class="col-sm-9"><input type="email" name="email_friend" class="form-control" id="email_friend" required></div></div>';
	  				}
				};

				deadline_on.onfocus = function() {
					  if (this.value == 1) { 
					  	this.className = "deadline";
					  	deadline.innerHTML = '<center><select name="task_deadline" class="form-control" id="task_deadline_year">{% for i in 2016..2025 %}<option value="{{ i }}">{{ i }}</option>{% endfor %}</select><select name="task_deadline" class="form-control" id="task_deadline_month"><option value="01">Январь</option><option value="02">Февраль</option><option value="03">Март</option><option value="04">Апрель</option><option value="05">Май</option><option value="06">Июнь</option><option value="07">Июль</option><option value="08">Август</option><option value="09">Сентябрь</option><option value="10">Октябрь</option><option value="11">Ноябрь</option><option value="12">Декабрь</option></select><select name="task_deadline" class="form-control" id="task_deadline_day">{% for i in 1..31 %}<option value="{{ i }}">{{ i }}</option>{% endfor %}</select><select name="task_deadline" class="form-control" id="task_deadline_hour">{% for i in 0..23 %}<option value="{{ i }}">{{ i }}:00</option>{% endfor %}</select></center>';
					  }
				};		

				deadline_off.onfocus = function() {
					  if (this.value == 0) { 
					  	this.className = "deadline";
					  	deadline.innerHTML = '';
					  }
				};

				function create_task(){
					var task_for = $('input:radio[name=task_for]:checked').val();
					var email_friend = $('#email_friend').val();
					var task_name = $('#task_name').val();
					var task_deadline_turn = $('input:radio[name=deadline_turn]:checked').val();		
					var task_deadline_year = $('#task_deadline_year').val();
					var task_deadline_month = $('#task_deadline_month').val();
					var task_deadline_day = $('#task_deadline_day').val();
					var task_deadline_hour = $('#task_deadline_hour').val();
					var task_type = $('#task_type').val();

					//alert(task_for+email_friend+task_name+task_deadline_turn+task_deadline_year+task_deadline_month+task_deadline_day+task_deadline_hour+task_type);

					var query = "task_for="+task_for+"&email_friend="+email_friend+"&task_name="+task_name+"&task_deadline_turn="+task_deadline_turn+"&task_deadline_year="+task_deadline_year+"&task_deadline_month="+task_deadline_month+"&task_deadline_day="+task_deadline_day+"&task_deadline_hour="+task_deadline_hour+"&task_type="+task_type;	
					$.ajax({
						type: "POST",
						url: "/task/do/create",
						data: query,
						success: function(answer) {
							//$("#answer").html(answer);	
							location.reload();				
						}
					});		
				}

				$(document).ready(function(){
				    $.getJSON("/task/select/list",
				        function(data){
				        console.log(data);
				        var i; 
				        var s = $('#temp_task').html();// берем образцовый хтмл из скрытого шаблона 
				        if (data.projects != 1) {
							for (i=0;i<10;i++){
					
								$('#project').append("<div id='id_p_"+i+"'>"+ s + "</div>"); // плодим дивы по нашему шаблону с уникальными ид
					
								$('#id_p_'+i).render(data.projects['number_'+i]); //рендерим свежевставленные дивы с шаблонами
							}	
						}
						if (data.tasks != 1) {
							for (i=0;i<10;i++){
					
								$('#task').append("<div id='id_t_"+i+"'>"+ s + "</div>"); // плодим дивы по нашему шаблону с уникальными ид
					
								$('#id_t_'+i).render(data.tasks['number_'+i]); //рендерим свежевставленные дивы с шаблонами
							}
						}
						if (data.notes != 1) {
							for (i=0;i<10;i++){
					
								$('#notes').append("<div id='id_n_"+i+"'>"+ s + "</div>"); // плодим дивы по нашему шаблону с уникальными ид
					
								$('#id_n_'+i).render(data.notes['number_'+i]); //рендерим свежевставленные дивы с шаблонами
							}	
						}
				    });
				});

			</script>
		
