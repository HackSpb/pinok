						<form class="form-horizontal" method="post" action="/registration">
							<h2 align="center">Регистрация</h2>
							<div class="form-group">
								<label for="reg_email" class="col-sm-2 control-label">Email</label>
								<div class="col-sm-10">
									<input type="email" name="reg_email" class="form-control textbox" id="reg_email" placeholder="pushkin@alexander.com" required>
								</div>
							</div>
							<div class="form-group">
								<label for="reg_password" class="col-sm-2 control-label">Пароль</label>
								<div class="col-sm-10">
									<input type="password" name="reg_password" class="form-control textbox" id="reg_password" placeholder="********" required>
								</div>
							</div>
							<div class="form-group">
								<label for="reg_password_r" class="col-sm-2 control-label">Повторите пароль</label>
								<div class="col-sm-10">
									<input type="password" name="reg_password_r" class="form-control textbox" id="reg_password_r" placeholder="********" required>
								</div>
							</div>
							<hr>
							<h3 align="center">Не обязательно для заполнения</h3>
							<div class="form-group">
								<label for="reg_name" class="col-sm-2 control-label">Имя</label>
								<div class="col-sm-10">
									<input type="text" name="reg_name" class="form-control textbox" id="reg_name" placeholder="Александр">
								</div>
							</div>
							<div class="form-group">
								<label for="reg_surname" class="col-sm-2 control-label">Фамилия</label>
								<div class="col-sm-10">
									<input type="text" name="reg_surname" class="form-control textbox" id="reg_surname" placeholder="Пушкин">
								</div>
							</div>
							<div class="form-group">
								<label for="reg_phone_number" class="col-sm-2 control-label">Номер телефона</label>
								<div class="col-sm-10">
									<input type="tel" name="reg_phone_number" class="form-control textbox" id="reg_phone_number" placeholder="89998887766">
								</div>
							</div>
							<div class="form-group">
								<div class="col-sm-offset-2 col-sm-10">
									<input type="submit" name="registration" class="btn btn-success" value="Зарегистрироваться">
								</div>
							</div>
						</form>
